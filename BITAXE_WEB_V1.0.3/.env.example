# BitAxe Web Management System Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql://bitaxe:bitaxe123@localhost:5432/bitaxe
POSTGRES_PASSWORD=bitaxe123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# OpenWeatherMap API (for weather-based optimization)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# ML Engine Configuration
ML_MODELS_DIR=./models
ML_OPTIMIZATION_ENABLED=true
ML_WEATHER_INTEGRATION=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin123
MONITORING_RETENTION_DAYS=30

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=60

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CONNECTIONS=1000
MAX_CONCURRENT_OPTIMIZATIONS=3

# Development Configuration (for development environment)
FLASK_ENV=development
FLASK_DEBUG=1

# Production Configuration (for production environment)
# FLASK_ENV=production
# FLASK_DEBUG=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bitaxe.log

# Network Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=7