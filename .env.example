# BitAxe V2.0.0 Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Flask Configuration
FLASK_SECRET_KEY=your-very-secure-secret-key-here
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_PATH=/opt/bitaxe-web/data/bitaxe_data.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/bitaxe/bitaxe.log

# Autopilot Configuration
AUTOPILOT_ENABLED=true
SAFETY_CHECK_INTERVAL=300
OPTIMIZATION_INTERVAL=3600

# Temperature Limits (Celsius)
TEMP_WARNING_THRESHOLD=73
TEMP_EMERGENCY_THRESHOLD=75

# Security Settings
API_RATE_LIMIT=100/hour
ENABLE_SWAGGER_UI=false